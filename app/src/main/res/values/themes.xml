<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReminderIn" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DMSansRegular">
        <item name="fontFamily">@font/dmsans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#181C32</item>
    </style>



    <style name="DMSansBoldTitle">
        <item name="fontFamily">@font/dmsans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DMSansBoldTitleGreen">
        <item name="fontFamily">@font/dmsans_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>


    <style name="DMSansBoldSubTitle">
        <item name="fontFamily">@font/dmsans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DMSansRegular14grey">
        <item name="fontFamily">@font/dmsans_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">#A3A4AD</item>
    </style>

    <style name="DMSansRegular14black">
        <item name="fontFamily">@font/dmsans_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">#121215</item>
    </style>
    <style name="DMSansMedium14black">
        <item name="fontFamily">@font/dmsans_medium</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">#121215</item>
    </style>



    <style name="inputfield">
        <item name="boxBackgroundColor">#F1F3F6</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>


</resources>